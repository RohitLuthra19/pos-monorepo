{
  "name": "desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile start --web",
    "dev:backend": "pnpm --filter backend dev",
    "dev:desktop-only": "cross-env EXPO_DEV_SERVER_URL=http://localhost:8081 electron-forge start",
    "dev": "concurrently -n api,mobile,desktop -c magenta,blue,green \"pnpm --filter backend dev\" \"pnpm --filter mobile start --web\" \"cross-env EXPO_DEV_SERVER_URL=http://localhost:8081 electron-forge start\"",
    "build:web": "pnpm --filter web build",
    "build:mobile": "pnpm --filter mobile export",
    "start": "electron .",
    "package": "pnpm run build:mobile && electron-forge package",
    "make": "pnpm run build:mobile && electron-forge make",
    "build": "pnpm run make"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "@electron/fuses": "^1.0.0",
    "electron": "^28.0.0",
    "typescript": "^5.0.0"
  }
}
